@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components
@inject IJSRuntime JSRuntime;
@inject IUriHelper UriHelper

<div class="main">
    <div class="header">
        <h1>Icollator Forever</h1>
        <div>
            Combine multiple Windows .ico files into one.  Also do other, related, things.
            <a href="About">More...</a>
        </div>
    </div>
    <div class="content">
        @Body
    </div>
</div>

@code
{
    [JSInvokable("GoToRoot")]
    public void GoToRoot()
    {
        UriHelper.NavigateTo("./");
        Console.WriteLine("navigated back");
    }

    protected override void OnInit()
    {
        JSRuntime.InvokeAsync<object>("setDotNetLayoutInstance", DotNetObjectRef.Create(this));
        base.OnInit();
    }
}